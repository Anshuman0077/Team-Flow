generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
}

model Channel {
  id          String    @id @default(uuid())
  name        String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  workspaceId String
  createdById String

  messages    Message[]

  @@unique([workspaceId, name])
}

model Message {
  id          String   @id @default(uuid())
  content     String
  imageUrl    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  authorId      String
  authorEmail   String
  authorName    String
  authorAvatar  String

  channel     Channel? @relation(fields: [channelId], references: [id])
  channelId   String?

  @@index([channelId])

  // ðŸŸ¢ Correct Thread Relation
  parentMessage Message? @relation("MessageThread", fields: [threadsId], references: [id], onDelete: Cascade)
  threadsId     String?

  replies       Message[] @relation("MessageThread")
}
